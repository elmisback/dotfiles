! No scrollback (use tmux for that).
xterm*saveLines: 0

! Properly set the terminal name.
xterm*termName: xterm-256color

xterm*background: rgb:10/10/10
xterm*foreground: rgb:a9/a9/a9

! Set the font.
xterm*faceName: Hack:size=10:antialias=true:autohint=true

*VT100.Translations: #override \
  ~Meta Shift Ctrl <Key>V: insert-selection(CLIPBOARD)

! Display unicode properly
xterm*locale: UTF-8

! Use Alt for keyboard shortcuts
xterm*metaSendsEscape: true
